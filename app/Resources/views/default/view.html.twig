{% extends 'base.html.twig' %}

{% block body %}
	<div class="pageOverLay" style="display: none"><div class="loader"></div></div>
	<div class="main">
			<div class="box_layout" style="margin-top:20px;">
				<div class="col-md-4">
					<h2>{{ user.name }}</h2>
					<hr/>
					<div class="col-md-2">
						<img src="{{ user.profile_image_url }}">
					</div>
					<div class="col-md-10">
						<h6>@{{ user.screen_name }}</h6>
						<p>{{ user.description }}</p>
						<p>{{ user.location }}</p>
					</div>
					<div class="clearfix"></div>
					<hr/>
					<a href="/" title="Go Back">Go Back</a>
				</div>

				<div class="col-md-4" id="timeline_container">
					<h2>Timeline</h2>
					<hr/>
					{% for line in timeline %}
						<div class="col-md-2">
							<img src="{{ line.TUserPhotourl }}">
						</div>
						<div class="col-md-10">
							<h6>{{ line.Ttext }}</h6>
						</div>
						<div class="clearfix"></div>
						<hr/>
					{% endfor %}
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
{% endblock %}

